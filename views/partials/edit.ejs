<div id="modalEditar<%= user._id %>" class="modal modalEditar">
  <div class="modal-content">
      <h4>Editar Usuario</h4>
      <form action="/users/update/<%= user._id %>" method="POST">
          <div class="input-field">
              <i class="material-icons prefix">person</i>
              <input type="text" id="name" name="name" class="validate" value="<%= user.name %>" required>
              <label for="name">Nombre</label>
          </div>
          <div class="input-field">
              <i class="material-icons prefix">email</i>
              <input type="email" id="email" name="email" class="validate" value="<%= user.email %>" required>
              <label for="email">Email</label>
          </div>
          <div class="input-field">
              <i class="material-icons prefix">lock</i>
              <input type="password" id="password" name="password" class="validate" placeholder="Dejar en blanco para mantener la misma contraseña">
              <label for="password">Contraseña</label>
          </div>
          <button class="btn waves-effect waves-light" type="submit">Actualizar Usuario</button>
      </form>
  </div>
  <div class="modal-footer">
      <a href="#" class="modal-close waves-effect waves-green btn-flat">Cancelar</a>
  </div>
</div>
